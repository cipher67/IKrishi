<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient Background -->
    <gradient
        android:startColor="#008080"
    android:endColor="#32CD32"
    android:angle="270"/>

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#E8A216" />   <!-- Border Color -->

    <!-- Corners -->
    <corners
        android:radius="8dp" />

    <!-- Shadow -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />

</shape>
